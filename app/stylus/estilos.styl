@import "normalize.styl"

negro = #333
rojo = #f23
verde = #BFFFC3
verdeFuerte = #008F08
header
	background negro
	padding 1em 0 0.5em 0
	figure
		max-width 100px
		height 133px
		margin 0 auto
		
		box-shadow 0px 0px 20px white
		img
			height 100%
			width 100%
	h1
		color rgba(white,0.6)
		text-shadow 0px 0px 10px white
		text-align center
section
	margin 0.5em 1em
	.todos
		article
			background verde	
			padding 1em 2em
			border-radius 3em
			color verdeFuerte
			margin 1em auto
	.todo
		margin 0.5em auto
		input
			width 100%
			height	2em
			font-size 1.7em
			border none
			color verdeFuerte
			border-bottom 1px solid verdeFuerte
			&:focus
				outline: 0;
@media screen and (min-width:1024px)
	section
		.todos
			article
				width 42%
				display inline-block
				&:nth-child(even)
					margin-left 1em
